<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="Base.ActNow_Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/back</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/post</item>
    </style>
    <style name="LongButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/barkentina</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="ShortButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/barkentina</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/barkentina</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/back</item>
        <item name="chipBackgroundColor">@color/back</item>
        <item name="chipStrokeColor">@color/button</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">0dp</item>
    </style>

    <style name="ForCustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/button</item>
        <item name="chipBackgroundColor">@color/button</item>
        <item name="chipStrokeColor">@color/back</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">0dp</item>
    </style>

    <style name="TwoLongButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/button</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">@font/barkentina</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>