<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/post"
    android:id="@+id/item_photo_post"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <!-- Аватар автора -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_user_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_user_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_avatar"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <!-- Информация о пользователе -->
    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/cv_user_avatar"
        app:layout_constraintTop_toTopOf="@id/cv_user_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_follow">

        <!-- Никнейм -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="dakapropro" />

        <!-- Город -->
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="14sp"
            tools:text="Nice day" />
    </LinearLayout>

    <!-- Кнопка подписки -->
    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_follow_background"
        android:text="@string/follow"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_user_avatar" />

    <!-- ViewPager для нескольких фото -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_photos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_user_avatar"/>

    <!-- Индикатор страниц ВНЕ ViewPager2 -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:dotsColor="@color/white"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsStrokeColor="@color/text"
        app:dotsStrokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_photos" />

    <!-- Блок тегов -->
    <HorizontalScrollView
        android:id="@+id/hsv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/dots_indicator">

        <LinearLayout
            android:id="@+id/ll_tags_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Теги будут добавляться динамически -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/tag_background"
                android:padding="4dp"
                android:text="#kitchen"
                android:textColor="@color/text"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Время публикации -->
    <TextView
        android:id="@+id/tv_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hsv_tags"
        tools:text="2 дня назад" />

    <!-- Блок действий -->
    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_post_time">

        <!-- Лайк -->
        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/desc_like"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/like"
            tools:tint="@color/text" />

        <TextView
            android:id="@+id/tv_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text"
            android:textSize="14sp"
            tools:text="3" />

        <!-- Поделиться -->
        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/desc_share"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/messss"
            tools:tint="@color/text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>